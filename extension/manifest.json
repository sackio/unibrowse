{
  "manifest_version": 3,
  "name": "Browser MCP",
  "version": "1.0.0",
  "description": "Connect your browser to the Browser MCP server for AI-powered automation",
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "webNavigation",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
