{
  "manifest_version": 3,
  "name": "unibrowse",
  "version": "1.0.0",
  "description": "Bridge the gap between AI agents and browser automation",
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "webNavigation",
    "offscreen",
    "webRequest",
    "declarativeNetRequest",
    "cookies",
    "history",
    "bookmarks",
    "sessions",
    "downloads",
    "downloads.shelf",
    "clipboardRead",
    "clipboardWrite",
    "system.cpu",
    "system.memory",
    "system.storage",
    "management",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>",
    "file:///*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
